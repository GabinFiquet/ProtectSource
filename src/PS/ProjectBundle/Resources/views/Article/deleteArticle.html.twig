

{# src/PS/ProjectBundle/Resources/views/Article/deleteArticle.html.twig #}

{% extends "@PSProject\\layout.html.twig" %}

{% block title %}
	Delete Article
{% endblock %}

{% block content %}
<container class="container-project container-fluid">
		<div class="project-article col-lg-10 offset-lg-1">
			<h2><span class="lettrine">D</span>elete this article</h2>
      <div class="col-md-4 offset-md-4 message">
        <p>Are you sure to remove the {{article.title}} article?</p>    
        <form action="{{ path('ps_project_delete_article',{'idproject': article.project.id, 'keyproject': article.project.keyproject, 'idarticle': article.id }) }}" method="post">   
          <a class="btn cancel-btn" href="{{ path('ps_project_edit_article', {'idproject': article.project.id, 'keyproject': article.project.keyproject, 'idarticle': article.id }) }}" class="btn btn-default">Cancel</a>
          <input type="submit" value="Delete" class="btn delete-project" />
          {{ form_rest(form) }}
      </form>        
    </div>
  </div>
</container>
{% endblock %}