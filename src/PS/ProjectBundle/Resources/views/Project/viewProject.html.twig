{% extends "@PSProject\\layout.html.twig" %}

{% block title %}
	Project
{% endblock %}

{% block body %}{#change to content#}
<div class="container-fluid">
	<div class="row">
		<aside class="col-xs-12 col-sm-12 col-md-3 col-lg-2 aside-participants">
			<h3>Participants</h3>
			<ul>
			{% for participant in listParticipant %}
				<li>{{ participant.user.username }}
				<button type="button"><span class="oi oi-x"></span></button>
				</li>
			{% endfor %}
			</ul>
			<a href="{{path("ps_project_add_participant",{"keyproject":project.keyproject,"idproject":project.id})}}">Add Participant</a>
		</aside>
		<container class="col-xs-12 col-sm-12 col-md-9 col-lg-10 container-project container-fluid">
			<div class="tittle-project">
				<h1>{{ project.name }}</h1>
				<a href="{{path("ps_project_add_participant",{"keyproject":project.keyproject,"idproject":project.id})}}"><span class="oi oi-cog"></span></a>
			</div>
			<div class="project-article">
				<h2><span class="lettrine">A</span>rticle Project</h2>
				<div class="row article-list">
				{% set listArticle = {} %}
					{% for article in listArticle %}
					<div class="col-xs-12 col-sm-6 col-md-4 col-lg-3 article-card">
						<img src="{{ aricle.img }}" alt="Article image">
						<div class="article-name">
							<p>{{ article.name }}</p>
						</div>
					</div>
					{% endfor %}
					<a class="col-xs-12 col-sm-6 col-md-4 col-lg-3 article-card" href="">
						<span class="oi oi-plus"></span>
					</a>
				</div>
					
			</div>
			<div class="project-informations row">

				<h2 class="col-xs-12 col-sm-12 col-md-12 col-lg-12"><span class="lettrine">P</span>roject Informations</h2>
				
				<div class="col-xs-12 col-sm-12 col-md-6 col-lg-6 submitted-informations">
					<h3><span class="lettrine">S</span>ubmitted</h3>
					<div class="add-information">
						<a href="">
							<span class="oi oi-plus"></span>
							Add information
						</a>
					</div>
					{% set listInformationSubmit = {} %}
					{% for informations in listInformationSubmit %}
					<div class="informations">						
							<img src"{{sourcetype.img}}">
							/*type todo*/
							<button type="button">V</button>
							<button type="button">X</button>						
					</div>
					{% endfor %}
				</div>
				<div class="col-xs-12 col-sm-12 col-md-6 col-lg-6 accepted-informations">
					<h3><span class="lettrine">A</span>ccepted</h3>
					
						{% set listInformationAccept = {} %}
						{% for informations in listInformationAccept %}
						<div class="informations">
							<img src"{{sourcetype.img}}">
							{#type todo#}
							<button type="button">X</button>
						</div>
						{% endfor %}
					
				</div>
			</div>
		</container>
	</div>
</div>
	{{ dump(project)}}
	{{ dump(listParticipant)}}

{% endblock %}

{% block javascripts %}
	{{ parent() }}
	

	
	
	
	
	
	
	
{% endblock %}