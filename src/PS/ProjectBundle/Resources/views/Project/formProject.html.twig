{# src/PS/ProjectmBundle/Resources/views/Project/formProject.html.twig #}

<div class="form container">
  {{ form_start(form, {'attr': {'class': 'form-horizontal'}}) }}

  {{ form_errors(form) }}  

  <div class="form-group">   

    <div class="col-sm-12">
      {{ form_label(form.name, "", {'label_attr': {'class': 'col-sm-2 control-label'}}) }}
      {{ form_errors(form.name) }}
      {{ form_widget(form.name, {'attr': {'class': 'form-control'}}) }}
    </div>
    <div class="col-sm-12">
      {{ form_errors(form.files) }}
      {{ form_widget(form.files, {'attr': {'class': ''}}) }}
    </div>

    <div class="col-sm-12">
      {{ form_label(form.visibility, "", {'label_attr': {'class': 'col-sm-2 control-label'}}) }}
      {{ form_errors(form.visibility) }}
      {{ form_widget(form.visibility, {'attr': {'class': ''}}) }}
    </div> 
    
    <div class="col-sm-12">
      {{ form_label(form.instruction, "", {'label_attr': {'class': 'col-sm-2 control-label'}}) }}
      {{ form_errors(form.instruction) }}
      {{ form_widget(form.instruction, {'attr': {'class': 'form-control'}}) }}
    </div>

    <div class="col-sm-12 submit-btn">
      {{ form_widget(form.Create, {'attr': {'class': 'btn btn-primary'}}) }}      
      <a class="btn return-project" href="{{path("ps_project_homepage")}}"><span class="oi oi-action-undo"></span> Return</a>
     </div>
  </div> 

  {{ form_rest(form) }}

  {{ form_end(form) }}
</div>
