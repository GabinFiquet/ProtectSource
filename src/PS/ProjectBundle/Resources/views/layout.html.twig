{% extends "\\base.html.twig" %}

{% block title %}
	Projects
{% endblock %}

{% block stylesheets %}
	{{ parent() }}
	
	<!-- css Bundle -->
	<link rel="stylesheet" href="{{ asset('bundles/psproject/css/baselayout.css') }}" type="text/css" media="all"/>
	
{% endblock %}


{% block body %}

	<div class='header container-fluid'>
		<div class='row'>
			<a class='col-md-10 offset-md-1' href="{{path("ps_project_homepage")}}">			
		 		<img src="{{ asset('assets/images/SourceGuard-logo.png') }}" width='50px' height='50px'/>
		 		<span class="white">Source<span class='red'>Guard</span></span>
		 	</a>
			<a class='col-md-1' href="{{path("fos_user_security_logout")}}">Sign out</a>
		</div>
	</div>
	
	{% for message in app.session.flashbag.get('notice') %}

		<div class="alert alert-dismissible fade show alert-block fadeOutUp" role="alert">
			<strong>Notice</strong> {{ message }}
			<button type="button" class="close" data-dismiss="alert" aria-label="Close">
				<span aria-hidden="true">&times;</span>
			</button>
		</div>
	{% endfor %}
	{% for message in app.session.flashbag.get('error') %}

		<div class="alert alert-dismissible fade show alert-block fadeOutUp" role="alert" >
			<strong style="color: red;">Error</strong> {{ message }}
			<button type="button" class="close" data-dismiss="alert" aria-label="Close">
				<span aria-hidden="true">&times;</span>
			</button>
		</div>	

	{% endfor %}
	
	
	{% block content %}

	{% endblock %}
	<div class='footer container-fluid'>
		<div class='row'>
			<div class="col-sx-12 col-md-3 offset-md-2">
				<img class="logo-hover" src="{{ asset('assets/images/facebook-logo-button.png') }}"/>
				<img class="logo-hover" src="{{ asset('assets/images/twitter.png') }}"/>
				<img class="logo-hover" src="{{ asset('assets/images/closed-envelope-circle.png') }}" />
			</div>

			<div class="col-xs-12 col-md-4 offset-md-2 contact">
				<a class='link' href="{{path("ps_project_contact")}}">Contact</a>
				{% if is_granted('ROLE_ADMIN') %}
					<a class='link' href="{{path("fos_user_list_user")}}"> List User | </a>
					<a class='link' href="{{path("ps_project_view_project_admin")}}"> List Project | </a>
				{% endif %}
			</div>
		</div>
	</div>
{% endblock %}
	
{% block javascripts %}
	{{ parent() }}
	

{% endblock %}
